<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="Theme.FlappyClippy" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="Theme.FlappyClippy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="JetpackSplashTheme" parent="JetpackSplashTheme.Base">
        <!-- Animated vector drawable -->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon_bird_small_animated_translate</item>-->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon_bird_small_animated_rotate</item>-->

        <!-- Adaptive icon drawable -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_bird_final</item>
    </style>

    <style name="JetpackSplashTheme.Base" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/appBackground</item>

        <item name="windowSplashScreenAnimationDuration">@integer/icon_animator_duration</item>
        <item name="windowSplashScreenBackground">@color/appBackground</item>

        <item name="postSplashScreenTheme">@style/SplashActivityTheme</item>
    </style>

    <!--    <style name="SplashActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">-->
    <style name="SplashActivityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="Theme.FlappyClippy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FlappyClippy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FlappyClippy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>